parameters:
    level: max
    paths:
        - src
        - tests

    excludes_analyse:
        - tests/data/*

    ignoreErrors:
        - '#.+ with generic class ReflectionClass but does not specify its types.+#'
        -
            message: '#Method [a-zA-Z0-9:\\_]+\(\) has no return typehint specified.#'
            path: tests/

    # Miscellaneous parameters
    inferPrivatePropertyTypeFromConstructor: true
